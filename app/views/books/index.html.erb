
<h1>Listing books</h1>

<table class="table table-hover">
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Author</th>
    <th></th>
  </tr>

<% @books.each do |book| %>
<tr>
   <td>some name</td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
   
    <td><%= link_to 'Show', book %>, <%= link_to 'Edit', edit_book_path(book) %>, <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '<span class="btn btn-primary btn-medium">New Book</span>'.html_safe, new_book_path %>
